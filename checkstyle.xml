<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">
<module name="Checker">
    <!-- Configuração do TreeWalker -->
    <module name="TreeWalker">
        <!-- Verifica a nomenclatura de pacotes -->
        <module name="PackageName">
            <property name="format" value="^[a-z]+([\\.][a-z][a-z0-9]*)*$"/>
        </module>

        <!-- Nomenclatura de variáveis locais -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Nomenclatura de parâmetros -->
        <module name="ParameterName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Nomenclatura de métodos -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Verifica a ordem dos imports -->
        <module name="ImportOrder">
            <property name="groups" value="java,javax,com,org"/>
            <property name="caseSensitive" value="false"/>
        </module>

        <!-- Checa espaços em branco após as palavras-chave -->
        <module name="WhitespaceAfter"/>
    </module>

    <!-- Verifica as quebras de linha -->
    <module name="LineLength">
        <property name="max" value="120"/>
    </module>
</module>
